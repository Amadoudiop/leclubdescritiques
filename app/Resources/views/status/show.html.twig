{% extends 'base_back.html.twig' %}

{% block body %}
    <h1>Status</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ status.id }}</td>
            </tr>
            <tr>
                <th>Wording</th>
                <td>{{ status.wording }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ status.color }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('status_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('status_edit', { 'id': status.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
