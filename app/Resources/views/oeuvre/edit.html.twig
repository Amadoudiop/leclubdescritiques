{% extends 'base_back.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body app-heading">
                    <img class="profile-img" src="http://placehold.it/150x150">
                    <div class="app-title">
                        <div class="title"><span class="highlight">Oeuvre edit</span></div>
                        <div class="description">Add a new oeuvre</div>
                    </div>
                    <a href="{{ path('oeuvre_new') }}">
                        <button type="button" class="btn btn-success">Add new Oeuvre</button>
                    </a>
                    <a href="{{ path('oeuvre_index') }}">
                        <button type="button" class="btn btn-info">
                            <i class="fa fa-reply" aria-hidden="true"></i>
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete" class="btn btn-danger">
                    {{ form_end(delete_form) }}
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            {{ form_start(edit_form) }}
                                {{ form_widget(edit_form) }}
                                <input type="submit" value="Edit" class="btn btn-warning">
                            {{ form_end(edit_form) }}                        
                        </div>
                        <div class="col-md-4">
                            <img id="preview_img"  src="{{ absolute_url(oeuvres_directory) }}{{ oeuvre.urlimage }}" alt="{{ oeuvre.title }}">
                            <div id="#el"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}
