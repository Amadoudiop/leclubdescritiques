{% extends 'base_back.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body app-heading">
                    <img class="profile-img" src="http://placehold.it/150x150">
                    <div class="app-title">
                        <div class="title"><span class="highlight">Page creation</span></div>
                    </div>
                    <a href="{{ path('page_index') }}">
                      <div class="icon">
                        <i class="fa fa-reply" aria-hidden="true"></i>
                      </div>
                      <div class="title">Back to the list</div>
                    </a>
                </div>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Add a page
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <input type="submit" value="Create" />
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
