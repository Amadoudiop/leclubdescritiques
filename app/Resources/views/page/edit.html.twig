{% extends 'base_back.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body app-heading">
                    <img class="profile-img" src="http://placehold.it/150x150">
                    <div class="app-title">
                        <div class="title"><span class="highlight">Page edit</span></div>
                        <div class="description">Add a new page</div>
                    </div>
                    <a href="{{ path('page_new') }}">
                      <div class="icon">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                      </div>
                      <div class="title">Create a new page</div>
                    </a>
                    <a href="{{ path('page_index') }}">
                      <div class="icon">
                        <i class="fa fa-reply" aria-hidden="true"></i>
                      </div>
                      <div class="title">Back to the list</div>
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Edit Page

                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete" class="btn btn-danger">
                    {{ form_end(delete_form) }}

                </div>
                <div class="card-body">
                    {{ form_start(edit_form) }}
                        {{ form_widget(edit_form) }}
                        <input type="submit" value="Edit" class="btn btn-warning">
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
