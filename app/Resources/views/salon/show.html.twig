{% extends 'base_back.html.twig' %}

{% block body %}
    <h1>Salon</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ salon.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ salon.title }}</td>
            </tr>
            <tr>
                <th>Participants_number</th>
                <td>{{ salon.participantsnumber }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('salon_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('salon_edit', { 'id': salon.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
