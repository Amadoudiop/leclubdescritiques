{% extends 'base_back.html.twig' %}

{% block body %}
    <h1>Option</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ option.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ option.label }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ option.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('option_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('option_edit', { 'id': option.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}