{% extends 'base_back.html.twig' %}

{% block body %}
    <!-- header menu -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body app-heading">
                    <img class="profile-img" src="http://placehold.it/150x150">
                    <div class="app-title">
                        <div class="title"><span class="highlight">Menus</span></div>
                        <div class="description">Configure your menus</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="card">
                <div class="card-header">
                New menu
                </div>
                <div class="card-body no-padding">
                    <div class="col-md-12 col-xs-12">
                        {{ form_start(newForm) }}
                            {{ form_widget(newForm) }}
                            <input type="submit" value="Create" class="btn btn-success">
                        {{ form_end(newForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
          <div class="card">
            <div class="card-header">
              List of menus
            </div>
            <div class="card-body no-padding">
              <table class="datatable table table-striped primary" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for menu in menus %}
                        <tr>
                            <td>{{ menu.name }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('menu_show', { 'id': menu.id }) }}">
                                        <button type="button" class="btn btn-primary" target="blank">show</button></a>
                                    </li>
                                    <li>
                                        <a href="{{ path('menu_edit', { 'id': menu.id }) }}"><button type="button" class="btn btn-warning">edit</button></a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>
{% endblock %}
