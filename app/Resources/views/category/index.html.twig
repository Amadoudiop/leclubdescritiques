{% extends 'base_back.html.twig' %}

{% block body %}
    <!-- header Page -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body app-heading">
                    <img class="profile-img" src="http://placehold.it/150x150">
                    <div class="app-title">
                        <div class="title"><span class="highlight">Categories</span></div>
                        <div class="description">Configure your categories</div>
                    </div>
                    <a href="{{ path('category_new') }}">
                        <button type="button" class="btn btn-success">Add a new Category</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
          <div class="card">
            <div class="card-header">
              List of categories
            </div>
            <div class="card-body no-padding">
              <table class="datatable table table-striped primary" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('category_show', { 'id': category.id }) }}">
                                        <button type="button" class="btn btn-primary">show</button></a>
                                    </li>
                                    <li>
                                        <a href="{{ path('category_edit', { 'id': category.id }) }}"><button type="button" class="btn btn-warning">edit</button></a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>

{% endblock %}
